@model Ecommerce.Models.LoaiSanPham

@{
    ViewBag.Title = "xóa loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-block">
    <h1 class="title"> Xóa loại sản phẩm </h1>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            Mã loại sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoaiSP)
        </dd>

        <dt>
            Tên loại sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoaiSP)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary-outline">Xóa</button>
                <a href="~/Admin/LoaiSanPham/Index" class="btn btn-danger-outline">Trở Về</a>
            </div>
        </div>
    }
</div>
