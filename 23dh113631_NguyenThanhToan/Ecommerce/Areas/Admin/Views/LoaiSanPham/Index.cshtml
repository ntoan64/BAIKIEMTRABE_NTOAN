@model IEnumerable<Ecommerce.Models.LoaiSanPham>

@{
    ViewBag.Title = "Quản Lý Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-block">
    <h1 class="title"> Quản Lý Danh Mục </h1>
</div>
<section class="section">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-block">
                    <div class="card-title-block">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="form-group mb-0">
                                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm danh mục..." style="max-width: 300px;">
                            </div>
                            <a href="~/Admin/LoaiSanPham/Create" class="btn btn-oval btn-primary">Thêm Mới Danh Mục</a>
                        </div>
                    </div>
                    <section class="example">
                        <div class="table-flip-scroll">
                            <table class="table table-striped table-bordered table-hover flip-content" id="nhanVienTable">
                                <thead class="flip-header">
                                    <tr>
                                        <th>Mã Danh Mục</th>
                                        <th>Tên Danh Mục</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="even gradeC">
                                            <td>@item.MaLoaiSP</td>
                                            <td>@item.TenLoaiSP</td>
                                            <td style="text-align:center">
                                                <a href="~/Admin/LoaiSanPham/Delete?MaLoaiSP=@item.MaLoaiSP"><i class="fa fa-trash"></i></a> |
                                                <a href="~/Admin/LoaiSanPham/Edit?id=@item.MaLoaiSP"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                                                <a href="~/Admin/LoaiSanPham/Details?id=@item.MaLoaiSP"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function(){
        $("#searchInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#nhanVienTable tbody tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
